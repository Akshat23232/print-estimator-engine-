  "n8n_workflow_example": {
    "_description": "Example n8n workflow structure for processing these webhooks",
    "workflow_name": "Print Order Processing",
    "nodes": [
      {
        "type": "Webhook",
        "name": "Receive Print Order",
        "parameters": {
          "path": "print-orders",
          "method": "POST"
        }
      },
      {
        "type": "Switch",
        "name": "Check Validation",
        "parameters": {
          "rules": [
            {"value": "={{$json.validation.is_valid}}", "operation": "equals", "value2": true}
          ]
        }
      },
      {
        "type": "Slack",
        "name": "Notify Invalid Order",
        "parameters": {
          "channel": "#print-orders-review",
          "message": "⚠️ Order {{$json.request_id}} needs review:\n{{$json.validation.errors}}"
        }
      },
      {
        "type": "HTTP Request",
        "name": "Create Order in System",
        "parameters": {
          "url": "https://your-erp.com/api/orders",
          "method": "POST",
          "body": "={{$json}}"
        }
      },
      {
        "type": "Email",
        "name": "Send Confirmation",
        "parameters": {
          "to": "customer@example.com",
          "subject": "Your Print Order Estimate - ${{$json.estimate.total}}",
          "body": "Thank you for your order!"
        }
      }
    ]
  }
}
